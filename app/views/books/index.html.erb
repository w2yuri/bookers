<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
     <% @books.each do |book| %>
      <tr>
        <td>&emsp;&emsp;&emsp;<%= book.title %></td>
        <td>&emsp;&emsp;&emsp;<%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
　　　  <td>&emsp;<%= link_to "Edit", edit_book_path(book.id) %></td>
  　　  　<td>　<%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<!--新規作成-->
<h1>New book</h1>
<%= form_with model: @book, url:'/books', method: :post do |f| %>

<% if @book.errors.any?%>
 <%= @book.errors.count %>errors prohibited this book from being saved:
 <ul class="book-list">
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
 </ul>
<% end %>
<div class="field">
    &emsp;&emsp;<%= f.label :title %><br>
    &emsp;&emsp;<%= f.text_field :title %>
</div>
<div class="field">
    &emsp;&emsp;<%= f.label :body%><br>
    &emsp;&emsp;<%= f.text_area :body %>
</div>
<div class="field">
    &emsp;&emsp;<%= f.submit 'Create Book' %>
</div>
<% end %>
